@page "/categories"

<PageTitle>Categorias</PageTitle>
<GenericList MyList="Categories">
    <Body>
        <h3>Categorias</h3>
        <div class="mb-3">
            <a href="/categories/create" class="btn btn-primary">Nueva Categoria</a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Categoria</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Categories!)
                {
                    <tr>
                        <td>
                            @category.Name
                        </td>
                        <td>
                            <a href="/categories/edit/@category.Id" class="btn btn-sm btn-warning">Editar</a>
                            <a href="/categories/details/@category.Id" class="btn btn-info btn-sm">Detalles</a>
                            <button @onclick="() => DeleteAsync(category)" class="btn btn-sm btn-danger">Borrar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>